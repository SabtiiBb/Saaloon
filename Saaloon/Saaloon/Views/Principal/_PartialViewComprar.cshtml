@model Saaloon.Models.DataCardVM
@using (Html.BeginForm("Comprar", "Principal", FormMethod.Post, new { @class = "form-control" }))
{
    @Html.AntiForgeryToken()
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Datos de Tarjeta</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="crearpago">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-row">
                        <div class="col-auto">
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fab fa-cc-mastercard"></i> | <i class="fab fa-cc-visa"></i></div>
                                </div>
                                @Html.EditorFor(model => model.Tipotc, new { htmlAttributes = new { @class = "form-control", placeholder = "Tipo de Tarjeta" } })
                                @Html.ValidationMessageFor(model => model.Tipotc, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-auto">
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fas fa-signature"></i></div>
                                </div>
                                @Html.EditorFor(model => model.Nombretc, new { htmlAttributes = new { @class = "form-control", placeholder = "Nombre" } })
                                @Html.ValidationMessageFor(model => model.Nombretc, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-auto">
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fas fa-building"></i></div>
                                </div>
                                @Html.EditorFor(model => model.Bancotc, new { htmlAttributes = new { @class = "form-control", placeholder = "Banco" } })
                                @Html.ValidationMessageFor(model => model.Bancotc, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-auto">
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fas fa-credit-card"></i></div>
                                </div>
                                @Html.EditorFor(model => model.Numerotc, new { htmlAttributes = new { @class = "form-control", placeholder = "Número de tarjeta" } })
                                @Html.ValidationMessageFor(model => model.Numerotc, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-auto">
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><b>CCV</b></div>
                                </div>
                                @Html.EditorFor(model => model.CCV, new { htmlAttributes = new { @class = "form-control", placeholder = "CCV" } })
                                @Html.ValidationMessageFor(model => model.CCV, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-auto">
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fas fa-calendar-day"></i></div>
                                </div>
                                @Html.EditorFor(model => model.Mestc, new { htmlAttributes = new { @class = "form-control", placeholder = "Mes" } })
                                @Html.ValidationMessageFor(model => model.Mestc, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-auto">
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="fas fa-calendar-alt"></i></div>
                                </div>
                                @Html.EditorFor(model => model.Añotc, new { htmlAttributes = new { @class = "form-control", placeholder = "Año" } })
                                @Html.ValidationMessageFor(model => model.Añotc, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                </div>
                @Html.HiddenFor(model => model.idCurso)
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-success"><i class="fas fa-money-bill-alt"></i> Guardar y Comprar</button>
                </div>
            </div>
        </div>
    </div>
}
