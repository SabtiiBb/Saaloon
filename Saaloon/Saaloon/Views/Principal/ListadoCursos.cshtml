@model IEnumerable<Saaloon.Context.Cursos>

@{
    ViewBag.Title = "ListadoCursos";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}

<br />
<nav class="navbar navbar-dark bg-dark">   
    <a class="navbar-brand" href="#"><b>Listado Cursos</b></a>
        <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Buscar</button>
        </form>
</nav>
<br />
@foreach (var item in Model) {
    <div class="media">
        <div class="media-body">
            <h5 class="mt-0 mb-1">@Html.DisplayFor(modelItem => item.Nombre)</h5>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </div>
        <div>
            <img src="/img/@Html.DisplayFor(modelItem => item.Foto)" class="ml-3">
            <p>$@Html.DisplayFor(modelItem => item.Costo)</p>
        </div>
        
    </div>
    <br />
}
