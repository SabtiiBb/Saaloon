@model Saaloon.Models.ClaseTema

@{
    ViewBag.Title = "ClaseTemaCurso";
    Layout = "~/Views/Shared/_LayoutPrincipal.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="grid-container-clasetema">
        <div class="nombres-clasetema">
            <div class="nombreCurso-clasetema">
                <h3><b>@Html.DisplayFor(model => model.NombreCurso) </b></h3>
            </div>
            <div class="nombretema-clasetema">
                <h3>||<b> @Html.DisplayFor(model => model.Tema)</b></h3>
            </div>
        </div>
        <div class="video-clasetema">
            <iframe width="100%" height="100%" src="@Html.DisplayFor(model => model.FotoTema) " frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
        <div class="descripciondeltema-clasetema">
            <h5><b>Descripción del tema: </b></h5>
            @Html.DisplayFor(model => model.DescripcionTema)
        </div>
        <div class="nombre-del-docente">
            <h5>
                <b>Docente: </b>
                @Html.DisplayFor(model => model.NombreDocente) @Html.DisplayFor(model => model.ApellidoDocente)
            </h5>
        </div>
        <div class="volver-clasetema"  style="text-align:right">
            <a href="#Catalogo" class="btn btn-light"><i class="fas fa-list-ol"></i>  Tabla de contenidos</a>
        </div>
    </div>

    <br />
    <hr />
    <table class="table table-hover">
        <tr>
            <th colspan="3" class="table-dark">
                <center>
                    <h2>
                        @Html.DisplayFor(model => model.NombreCurso)
                    </h2>
                </center>
            </th>
        </tr>
        <a name="Catalogo"></a>
        @foreach (var item in Model.TemarioClase)
        {
            <tr class="contenidotema">
                <td class="temna"><b>@Html.DisplayFor(modelItem => item.Tema)</b></td>
                <td class="descripciontema">@Html.DisplayFor(modelItem => item.Descripcion)</td>
                <td>
                    <a class="btn btn-warning" href="@Url.Action("ClaseTemaCurso", "Principal", new { idTema = item.IdTema })">
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </td>
            </tr>
        }

    </table>
}
